@model MVCProject.LecturerViewModel.RegisterationViewModel
@*@model MVCProject.Models.Cours*@

@*@{
        Layout = null;
    }*@

<!DOCTYPE html>
<style>
    .headerdiv {
        padding-bottom: 0px;
        text-align: center;
        font-size: 10px;
        background-color: #31302a;
    }

    body {
        font-family: Arial;
        margin: auto;
        background-color: #e0ffe9;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create New Courses</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="text-align: center" class="form-horizontal">
            <div class="headerdiv">
                <img style="padding-bottom=fixed;" src="~/Content/logo_eng.png" />

            </div>
        </div>
        <br />
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*@Html.HiddenFor(model => model.courses1.lecturerID)*@


            <div class="form-group">
                @Html.LabelFor(model => model.courses1.Courseid, htmlAttributes: new { @type = "number", @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*<input type="number" name="Courseid">*@
                    @Html.EditorFor(model => model.courses1.Courseid, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.Courseid, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.courses1.NameCourse, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.courses1.NameCourse, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.NameCourse, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.courses1.lecturerID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.courses1.lecturerID, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.courses1.lecturerID, Model.user12, "Choose lecturer", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.lecturerID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.courses1.Day, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.courses1.Day, Model.days, "Choose Day", new { htmlAttribute = new { @calss = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.Day, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.courses1.TimeStart, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.courses1.TimeStart, new { htmlAttributes = new { @type = "time", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.TimeStart, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.courses1.TimeEnd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.courses1.TimeEnd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.TimeEnd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.courses1.DateMoedA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*<input type="date" name="usr_time">*@
                    @*<input type="date" min="2020-01-07"step="7">*@
                    @Html.EditorFor(model => model.courses1.DateMoedA, new { htmlAttributes = new { @type = "date", @min = "2020-01-07", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.DateMoedA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.courses1.DateMoedB, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.courses1.DateMoedB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.courses1.DateMoedB, "", new { @class = "text-danger" })
                </div>
            </div>
            <h3>Courses Table</h3>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <table class="table" id="table">
                    <thead>
                        <tr>
                            <th>Lecturer ID</th>
                            <th>Lecturer Name</th>
                            <th>Lecturer Username</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.users)
                        {
                            <tr>
                                <td>@course.Id</td>
                                <td>@course.FirstName  @course.LastName</td>
                                <td>@course.Username</td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back", "Index")
    </div>

</body>
</html>
